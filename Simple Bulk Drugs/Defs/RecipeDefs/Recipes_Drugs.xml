	<RecipeDef ParentName="MakeDrugBulkBase">
		<defName>MakeGoJuiceBulk</defName>
		<label>make five go-juice</label>
		<description>Produce five go-juice at once to save time when crafting and carrying ingredients.</description>
		<jobString>Producing go-juice.</jobString>
		<workAmount>3000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Yayo</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Neutroamine</li>
				<li>Yayo</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<GoJuice>5</GoJuice>
		</products>
		<skillRequirements>
			<Crafting>2</Crafting>
			<Intellectual>7</Intellectual>
		</skillRequirements>
		<researchPrerequisite>GoJuiceProduction</researchPrerequisite>
	</RecipeDef>

